---
import '../styles/global.css';
const workshopDate = "April 15-16, 2025"; // Update with your actual workshop date
const workshopTitle = "Workshop Title"; // Update with your actual workshop title
---

<!DOCTYPE html>
<html lang="it">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{workshopTitle}</title>
  </head>
  <body class="bg-gray-50">
    <header class="bg-blue-600 text-white py-12">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold mb-4">{workshopTitle}</h1>
        <p class="text-xl">{workshopDate}</p>
      </div>
    </header>

    <main class="container mx-auto px-4 py-8">
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4">Descrizione del Workshop</h2>
        <p class="text-gray-700">
          Inserisci qui la descrizione dettagliata del workshop...
        </p>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4">Programma</h2>
        <div class="space-y-4">
          <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="font-bold">Sessione 1</h3>
            <p class="text-gray-600">09:00 - 10:30</p>
            <p>Descrizione della sessione...</p>
          </div>
          <!-- Aggiungi più sessioni qui -->
        </div>
      </section>

      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4">Relatori</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-white p-4 rounded-lg shadow">
            <h3 class="font-bold">Nome Relatore</h3>
            <p class="text-gray-600">Titolo / Organizzazione</p>
            <p>Breve biografia...</p>
          </div>
        </div>
      </section>

      <section>
        <h2 class="text-2xl font-bold mb-4">Registrazione</h2>
        <p class="text-gray-700 mb-4">
          Per partecipare al workshop, compilare il modulo di registrazione...
        </p>
        <!-- Aggiungi qui il link al form di registrazione -->
      </section>
    </main>

    <footer class="bg-gray-800 text-white py-6 mt-12">
      <div class="container mx-auto px-4 text-center">
        <p>© 2025 {workshopTitle}. Tutti i diritti riservati.</p>
      </div>
    </footer>
  </body>
</html>
